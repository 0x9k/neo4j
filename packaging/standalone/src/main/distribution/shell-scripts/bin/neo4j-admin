#!/usr/bin/env bash

set -o errexit -o nounset -o pipefail
[[ "${TRACE:-}" ]] && set -o xtrace

: "${NEO4J_BIN:=$(dirname "$0")}"
readonly NEO4J_BIN
placeholder_for_neo4j_shared
setup_java_opts() {
  JAVA_OPTS=("-cp" "${CLASSPATH}" "-Dfile.encoding=UTF-8")
  if [[ -n "${HEAP_SIZE:-}" ]]; then
    JAVA_OPTS+=("-Xmx${HEAP_SIZE}")
    JAVA_OPTS+=("-Xms${HEAP_SIZE}")
  fi
  readonly JAVA_OPTS
}
setup_java_opts
call_main_class "org.neo4j.commandline.admin.AdminTool" "$@"
