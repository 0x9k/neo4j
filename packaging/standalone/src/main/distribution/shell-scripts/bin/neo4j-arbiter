set -euo pipefail
[[ "${TRACE:-}" ]] && set -x

IS_ARBITER="t"

setup_neo4jhome_and_script() {
  SCRIPT=$0

  cd "$(dirname "${SCRIPT}")"
  SCRIPT="$(basename "${SCRIPT}")"

  while [ -L "${SCRIPT}" ]
  do
    SCRIPT="$(readlink "${SCRIPT}")"
    cd "$(dirname "${SCRIPT}")"
    SCRIPT="$(basename "${SCRIPT}")"
  done

  NEO4J_HOME="$(cd "$(dirname "${SCRIPT}")/.." && dirs -l +0)"
}
setup_neo4jhome_and_script

source "${NEO4J_HOME}/bin/neo4j-common.sh"

main "$@"
