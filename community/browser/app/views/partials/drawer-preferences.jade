.inner
  h4 Configuration

  form(ng-controller="SettingsCtrl")
    div(ng-show="neo4j.config.allow_outgoing_browser_connections")
      h5 Messaging
      .form-group
        label(for="userName") Name
          input.form-control.input#userName(type='text', ng-model="settings.userName", ng-change="save()")
      .checkbox
        label(for="shouldReportUdc")
          input#shouldReportUdc(type="checkbox", ng-model="settings.shouldReportUdc", ng-change="save()")
          span &nbsp; Share non-sensitive data?
      button.btn.btn-default.btn-sm(ng-click="showMessenger()") 
        span.glyphicon.glyphicon-envelope &nbsp;Messenger

    h5 User Interface
    .form-group
      label Theme
      .radio
        label
          input(type="radio", name="themeRadio", id="theme1", value="normal", ng-model="settings.theme", ng-change="save()", checked)
          span Normal
      .radio
        label
          input(type="radio", name="themeRadio", id="theme2", value="dark", ng-model="settings.theme", ng-change="save()")
          span Dark
      .radio
        label
          input(type="radio", name="themeRadio", id="theme3", value="outline", ng-model="settings.theme", ng-change="save()")
          span Outline
    .form-group
      label(for="initCmd") Initial Command
        input.form-control.input#initCmd(type='string', ng-model="settings.initCmd", ng-change="save()")
    
    h5 Preferences
    .checkbox
      label(for="shouldReportUdc")
        input#shouldReportUdc(type="checkbox", ng-model="settings.shouldReportUdc", ng-change="save()")
        span &nbsp; Help improve Neo4j? 
        a.fa.fa-info-circle(href='http://neo4j.com/legal/neo4j-user-experience/') 
    .checkbox(ng-show="neo4j.enterpriseEdition")
      label(for="storeCredentials")
        input#storeCredentials(type='checkbox', ng-model="settings.storeCredentials", ng-change="save()")
        span &nbsp; Save login credentials
    .checkbox
      label(for="enableMotd")
        input#enableMotd(type='checkbox', ng-model="settings.enableMotd", ng-change="save()")
        span &nbsp; Enable MOTD feed

    h5 Network Connection
    .form-group
      label(for="maxExecutionTime") Max Execution Time
        input.form-control.input#maxExecutionTime(type='number', ng-model="settings.maxExecutionTime", ng-change="save()")
    .form-group
      label(for="heartbeat") Heartbeat
        input.form-control.input#maxExecutionTime(type='number', ng-model="settings.heartbeat", ng-change="save()")

    h5 Result Frames
    .form-group
      label(for="maxFrames") Max Frames
        input.form-control.input#maxFrames(type='number', ng-model="settings.maxFrames", ng-change="save()")
    .form-group
      label(for="maxHistory") Max History
        input.form-control.input#maxHistory(type='number', ng-model="settings.maxHistory", ng-change="save()")
    .checkbox
      label(for="scrollToTop")
        input#scrollToTop(type='checkbox', ng-model="settings.scrollToTop", ng-change="save()")
        span &nbsp; Scroll To Top

    h5 Graph Visualization
    .form-group
      label(for="maxNeighbours") Max Neighbors
        input.form-control.input#maxNeighbours(type='number', ng-model="settings.maxNeighbours", ng-change="save()")
    .form-group
      label(for="maxNodes") Max Nodes
        input.form-control.input#maxNodes(type='number', ng-model="settings.maxNodes", ng-change="save()")
    .form-group
      label(for="maxRows") Max Rows
        input.form-control.input#maxRows(type='number', ng-model="settings.maxRows", ng-change="save()")
    .form-group
      label(for="maxRawSize") Max Raw Size
        input.form-control.input#maxRawSize(type='number', ng-model="settings.maxRawSize", ng-change="save()")
    .form-group
      label(for="refreshInterval") Refresh Interval
        input.form-control.input#refreshInterval(type='number', ng-model="settings.refreshInterval", ng-change="save()")
